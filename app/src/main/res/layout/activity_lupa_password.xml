<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    android:orientation="vertical"
    android:padding="16sp"
    tools:context=".RegisterActivity">

    <!-- textview Judul Halaman Lupa Password -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa Password"
        android:textColor="#455BAE"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="40dp" />

    <!--  textview E-Mail  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textSize="18sp"
        android:textColor="#2451FE"
        android:text="E-Mail"
        android:textAlignment="center"/>

    <!--  edittext E-Mail  -->
    <EditText
        android:id="@+id/edttEmailVerify"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:background="@drawable/bg_edit_white"
        android:inputType="textEmailAddress"
        android:textColorHint="#D9D9D9"
        android:hint="Masukkan email"
        android:textAlignment="center" />

    <!--  Tombol Register  -->
    <Button
        android:id="@+id/btnLupaPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_corner"
        android:text="Kirim URL Verifikasi"
        android:textSize="16sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="235dp">

        <TextView
            android:id="@+id/texView2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:paddingEnd="5dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Kambali ke"
            android:textSize="16dp"/>

        <!--  textview Login untuk pindah ke halaman LOGIN  -->
        <TextView
            android:id="@+id/linkKeLogin"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:text="Login"
            android:textSize="16dp"
            android:textColor="#49DAF7"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>