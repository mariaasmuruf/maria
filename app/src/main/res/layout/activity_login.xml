<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    android:orientation="vertical"
    android:padding="16sp"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="#455BAE"
        android:textSize="45dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="40dp" />

    <!--  textview E-MAIL  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:textColor="#2451FE"
        android:text="E-Mail"/>

    <EditText
        android:id="@+id/edtLoginPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="30dp"
        android:background="@drawable/bg_edit_white"
        android:textColorHint="#D9D9D9"
        android:layout_marginTop="2dp"
        android:hint="Masukkan email"
        android:inputType="textEmailAddress"/>

    <!--  textview PASSWORD  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:textColor="#2451FE"
        android:text="Password"/>

    <!-- edittext masukkan password -->
    <EditText
        android:id="@+id/edttLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:background="@drawable/bg_edit_white"
        android:textColorHint="#D9D9D9"
        android:inputType="textPassword"
        android:hint="Masukkan password"
        android:layout_marginTop="2dp" />

    <!--  textview LUPA PASSWORD  -->
    <TextView
        android:id="@+id/linkKeLupaPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingEnd="10dp"
        android:textSize="18sp"
        android:textColor="#49DAF7"
        android:textAlignment="textEnd"
        android:text="Lupa Password"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_corner"
        android:text="Login"
        android:textSize="16sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/texView2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:paddingEnd="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Belum punya akun?"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/linkKeRegister"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Register"
            android:layout_marginStart="0dp"
            android:textColor="#49DAF7"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>